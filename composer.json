{
    "name": "pinkcrab/wc_pink_pos-wc-bridge",
    "type": "library",
    "description": "A bridge between WooCommerce and the PinkCrab WC_Pink_Pos Project.",
    "keywords": [],
    "homepage": "https://github.com/pink-crab/wc_pink_pos-wc-bridge",
    "license": "MIT",
    "authors": [{
        "name": "Glynn Quelch",
        "email": "glynn@pinkcrab.co.uk",
        "homepage": "https://github.com/gin0115"
    }],
    "autoload": {
        "psr-4": {
            "PinkCrab\\WC_Pink_Pos\\": "../src"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "PinkCrab\\WC_Pink_Pos\\Tests\\": "../tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "roots/wordpress": "^5.5",
        "wp-phpunit/wp-phpunit": "^5.0",
        "symfony/var-dumper": "4.*",
        "phpstan/phpstan": "^0.12.6",
        "szepeviktor/phpstan-wordpress": "^0.7.2",
        "php-stubs/wordpress-stubs": "^5.6.0",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "wp-coding-standards/wpcs": "*",
        "object-calisthenics/phpcs-calisthenics-rules": "*",
        "jetbrains/phpstorm-stubs": "dev-master",
        "humbug/php-scoper": "0.13.9",
        "bamarni/composer-bin-plugin": "^1.4",
        "kimhf/woocommerce-stubs": "^0.2.0",
        "kimhf/advanced-custom-fields-pro-stubs": "^5.9",
        "pxlrbt/php-scoper-prefix-remover": "^0.1.0",
        "php-stubs/woocommerce-stubs": "^5.5",
        "gin0115/wpunit-helpers": "^1.0"
    },
    "require": {
        "php": ">=7.1.0",
        "pinkcrab/perique-framework-core": "^1.0",
        "pinkcrab/perique-route": "*",
        "psr/log": "^1.1"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-clover coverage.xml --testdox",
        "coverage": "./vendor/bin/phpunit --coverage-html coverage-report --testdox",
        "analyse": "./vendor/bin/phpstan analyse src -l8",
        "sniff": "./vendor/bin/phpcs src/ -v",
        "all": "composer test && composer analyse && composer sniff",
        "build": "bash build.sh",
        "build-dev": "bash build.sh --dev",
        "build-dump": "composer dump-autoload --working-dir build ",
        "gh-action": "mkdir build && bash build.sh --dev && composer test && composer analyse && composer sniff"
    },
    "prefer-stable": false,
    "config": {
        "prepend-autoloader": true,
        "autoloader-suffix": "pinkcrab_pinkpos_dev"
    }
}